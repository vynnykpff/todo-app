{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "!/*": [
        "public/*",
      ],
      "#/*": [
        "src/assets/*"
      ],
      "@hooks": [
        "src/hooks"
      ],
      "@utils": [
        "src/utils"
      ],
      "@store": [
        "src/store"
      ],
      "@providers": [
        "src/providers"
      ],
      "@types": [
        "src/common/types"
      ],
      "@constants": [
        "src/common/constants"
      ],
      "@schemes": [
        "src/common/schemes"
      ],
      "@components": [
        "src/components"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
